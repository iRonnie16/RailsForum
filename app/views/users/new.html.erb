<% @page_title = "Signup" %>
<%=  stylesheet_link_tag "style.css" %>

<body>
  <div class="Sign_Form">
    <h1>Sign Up</h1>
    <%= form_for :user, url: '/users' do |f| %>
      <p> Username:</br> <%= f.text_field :name%> </p>
      <p> Email:</br> <%= f.text_field :email%> </p>
      <p> Password:</br> <%= f.password_field :password%></p>
      <p> Confirm Password:</br> <%= f.password_field :password_confirmation%> </p>
      <%= f.submit :Signup, :class => 'signup-button' %>
    <% end %>
  </div>
</body>